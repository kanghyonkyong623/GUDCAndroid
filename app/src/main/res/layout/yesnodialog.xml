<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="48dp"
                    android:layout_gravity="center_horizontal" android:background="#222222">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView3"
                   android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                   android:src="@drawable/mark"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/btnClose"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:background="@color/main_background_dark"
            android:textColor="@color/main_selection"
            android:textSize="48dp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/upperline"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/horizontal_line_height_fat"
        android:background="@color/main_decorations"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/dialogtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="dummy text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_text_color_neutral" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogButtonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/main_selection"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="@android:string/yes"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_text_color"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/dialogButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/main_decorations"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="@android:string/cancel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_text_color"
            android:layout_marginLeft="5dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lowerline"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/horizontal_line_height_fat"
        android:background="@color/main_decorations"
        android:orientation="horizontal" />

</LinearLayout>