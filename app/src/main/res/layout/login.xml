<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
              android:weightSum="1" android:background="#ff7e7e7e"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp" android:layout_gravity="center_horizontal" android:background="#222222">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                android:src="@drawable/mark"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5px"
                android:text="Use a local account to log in."
                android:textSize="20dp"
                android:textStyle="bold" android:textColor="#ff000000" android:layout_marginTop="40dp"
                    />

            <TextView
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5px"
                android:text="User name"
                android:textSize="16dp" android:textColor="#ff000000" android:layout_margin="10dp"
                    />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ff222222" android:layout_margin="10dp"
                android:textSize="16dp" android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5px"
                android:text="Password"
                android:textSize="16dp" android:textColor="#ff000000" android:layout_margin="10dp"
                    />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:password="true" android:background="#ff222222" android:layout_margin="10dp"
                android:textColor="@android:color/white" android:textSize="16dp"/>

            <CheckBox
                android:id="@+id/chkRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me?" android:textColor="#ff000000" android:layout_margin="10dp" android:textSize="16dp"
                android:enabled="true"
                android:checked="false" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="111dp"
                android:layout_height="40dp"
                android:text="Log in"
                android:textStyle="bold" android:background="#ff1d72ef" android:textColor="@android:color/white"
                android:layout_margin="10dp" android:textSize="16dp" android:onClick="login"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>